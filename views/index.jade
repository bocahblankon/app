extends layout

block content
    h1= title
    #wrap_utama
        - each employee in employees
          div.wrapkedua
            div.created_at= employee.created_at
            div.title= employee.title 
            div.name= employee.name
                form( method="post", action="/user/:id/delete") 
                    input(name="_id", type="hidden", value=employee._id.toHexString()) 
                    input(id="delete", value="Hapus", type="submit")
                form( method="get", action="/user/:id/edit") 
                    input(name="_id", type="hidden", value=employee._id.toHexString()) 
                    input(id="edit", value="Edit", type="submit")
        a(href="/user/new")!= "Tambah Anggota"
